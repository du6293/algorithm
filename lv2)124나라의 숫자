def solution(n):
    answer = ''
    while n:
        if n % 3: #3의 배수가 아닌경우
            answer += str(n % 3)  # 3으로 나눈 나머지 한자리 추가
            n //= 3  #n을 3으로 나눈 나머지로 변경해 또 3으로 나눔
        else:  #3의 배수인 경우
            answer += "4"  #3으로 나눈 나머지 0을 4로 변경해 추가
            n = n//3 - 1   # 3으로 나눈 나머지 -1 로 변경해 추가
    return answer[::-1]  #역순으로 출력
